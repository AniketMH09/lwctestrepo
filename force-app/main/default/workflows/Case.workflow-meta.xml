    <rules>
        <fullName>Case Closed Automatic Resolved</fullName>
        <actions>
            <name>Set_retry_to_zero</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Added to resolve issue of email not being sent for Automatically Closed Cases</description>
        <formula>AND( NOT(Case_Closure_Email_Sent__c ),         Finance_Account__c &lt;&gt; NULL,  RecordType.DeveloperName != &apos;CCPA&apos;, ISPICKVAL(Status, &apos;Closed&apos;), ISPICKVAL(Case_Reason__c, &apos;Resolved&apos;), ISPICKVAL(Processing_Type__c, &apos;Automatic - Successful&apos;), ISPICKVAL(Type, &apos;Due Date Change&apos;) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Case Closed Resolved</fullName>
        <actions>
            <name>Set_retry_to_zero</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND( NOT(Case_Closure_Email_Sent__c ),         Finance_Account__c &lt;&gt; NULL,         OR(ISCHANGED(Status),ISCHANGED(Case_Reason__c)),         ISPICKVAL(Status, &apos;Closed&apos;),         ISPICKVAL(Case_Reason__c, &apos;Resolved&apos;),  RecordType.DeveloperName != &apos;CCPA&apos;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
