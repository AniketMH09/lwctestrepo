            <name>Case_Record_Type</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Case_Status_to_Assigned</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(  $Profile.Name=&apos;NPC&apos;,  ISCHANGED(OwnerId), RecordType.DeveloperName != &apos;CCPA&apos;,    NOT(ISPICKVAL( Type , &apos;Disaster Relief&apos;))   )</formula>
